extends ../layout/main-layout.pug

block styles 
    link(rel="stylesheet", href="")

block content
    main 
        if orders.length > 0
            ul 
                each order in orders 
                    li 
                        h1 #{order.id}
                        ul 
                            each item in order.products
                                li 
                                    h1 #{item.product.title} (#{item.quantity})

        else 
            h1 Nothing here!