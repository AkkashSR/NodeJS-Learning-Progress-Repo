extends ../layout/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content 
    main 
        if products.length > 0
            .grid 
                each prod of products 
                    article.card.product-item 
                        header.card__header
                            h1.card__header #{prod.title} 
                        div.card__image
                            img(src= prod.imageUrl, alt= prod.imageUrl)
                        div.card__content 
                            h2.product__price #{prod.price}
                            p.product__description Quantity: #{prod.cartItem.quantity}
                        div.card__actions
                            form(action="./delete-product-from-cart" method="POST")
                                button.btn(type="Submit") Delete product from cart
                                input(type="hidden", name="productId", value= prod.id)
            .centered 
                form(action="/create-order", method="POST")
                    button.btn(type = "Submit") Order Now 
