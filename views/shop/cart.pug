extends ../layout/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content 
    main 
        if products.length > 0
            .grid 
                each prod of products 
                    article.card.product-item 
                        header.card__header
                            h1.card__header #{prod.productData.title} 
                        div.card__image
                            img(src= prod.productData.imageUrl, alt= prod.productData.imageUrl)
                        div.card__content 
                            h2.product__price #{prod.productData.price}
                            p.product__description Quantity: #{prod.qty}
                        div.card__actions
                            form(action="./delete-product-from-cart" method="POST")
                                button.btn(type="Submit") Delete product from cart
                                input(type="hidden", name="productId", value= prod.productData.id)
            form(action="/checkout", method="POST")
                button.btn(type = "Submit") Proceed to Checkout 
                input(type="hidden", name="productId", value=cart)
